{
    "name": "code-distortion/options",
    "description": "Simple and flexible, expressive option handling",
    "keywords": [
        "code distortion",
        "parameters",
        "options",
        "default",
        "settings"
    ],
    "homepage": "https://github.com/code-distortion/options",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Tim Chandler",
            "email": "tim@code-distortion.net",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "7.1.* | 7.2.* | 7.3.* | 7.4.* | 8.0.* | 8.1.*",
        "ext-mbstring": "*"
    },
    "require-dev": {
        "jchook/phpunit-assert-throws": "^1.0",
        "phpstan/phpstan": "^0.10 | ^0.11 | ^0.12 | ^1.0",
        "phpunit/phpunit": "^7.0 | ^8.0 | ^9.0",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "autoload": {
        "psr-4": {
            "CodeDistortion\\Options\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "CodeDistortion\\Options\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "phpstan": "vendor/bin/phpstan analyse -c phpstan.neon --level=max",
        "phpcs": "vendor/bin/phpcs"
    },
    "config": {
        "sort-packages": true
    }
}
